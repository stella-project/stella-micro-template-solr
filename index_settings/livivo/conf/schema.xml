-->
        <!-- Mehrere Werte in einem Feld (Trenner ' ; ') sparsam normalisiert -->
        <fieldType name="multstring" class="solr.TextField" positionIncrementGap="100">
          <analyzer>
            <tokenizer class="solr.PatternTokenizerFactory" pattern=" ; " />
            <filter class="solr.LowerCaseFilterFactory"/>
          </analyzer>
        </fieldType>

        <fieldType name="isn" class="solr.TextField" positionIncrementGap="100">
          <analyzer>
            <tokenizer class="solr.PatternTokenizerFactory" pattern="^(\S*)\s*.*$" group="1"/>
            <filter class="solr.LowerCaseFilterFactory"/>
            <filter class="solr.PatternReplaceFilterFactory"
                 pattern="^([\d\-\.]+[xX]?).*$" replacement="$1"
            />
            <filter class="solr.PatternReplaceFilterFactory"
                 pattern="[\-\.]" replacement=""  replace="all"
            />
            <!-- 979er duerfen eigentlich nicht reduziert werden, sind aber oft Vertipper -->
            <filter class="solr.PatternReplaceFilterFactory"
                 pattern="^97[89](\d{9}).*$" replacement="$1"
            />
            <!-- Pruefziffer bei 10stelligen entfernen -->
            <filter class="solr.PatternReplaceFilterFactory"
                 pattern="^(\d{9}).$" replacement="$1"
            />
            <filter class="solr.LengthFilterFactory" min="1" max="100" />
            <filter class="solr.RemoveDuplicatesTokenFilterFactory"/>
          </analyzer>
        </fieldType>
        <!-- etwas allgemeiner als isn (auch fuer andere IDs) bisher allerdings fast identisch -->
        <fieldType name="nr_id" class="solr.TextField" positionIncrementGap="100">
          <analyzer>
            <tokenizer class="solr.PatternTokenizerFactory" pattern="^(\S*)\s*.*$" group="1"/>
            <filter class="solr.LowerCaseFilterFactory"/>
            <filter class="solr.PatternReplaceFilterFactory"
                 pattern="^([\d\-\.]+[xX]?).*$" replacement="$1"
            />
            <filter class="solr.PatternReplaceFilterFactory"
                 pattern="[\-\.]" replacement=""  replace="all"
            />
            <!-- 979er duerfen eigentlich nicht reduziert werden, sind aber oft Vertipper -->
            <filter class="solr.PatternReplaceFilterFactory"
                 pattern="^97[89](\d{9}).*$" replacement="$1"
            />
            <filter class="solr.LengthFilterFactory" min="1" max="100" />
            <filter class="solr.RemoveDuplicatesTokenFilterFactory"/>
          </analyzer>
        </fieldType>


