        <!-- Text Field for Normalized ISBN/ISSN Numbers - take first chunk of text
             prior to whitespace, force to lowercase, strip non-ISBN/ISSN characters,
             omit results that are empty after stripping. 
             Grundstruktur weitgehend aus Vufind, Regular Expression von ML
        -->
        <fieldType name="signatur" class="solr.TextField" positionIncrementGap="100">
          <analyzer>
            <tokenizer class="solr.KeywordTokenizerFactory"/>
            <filter class="solr.LowerCaseFilterFactory"/>
            <filter class="solr.PatternReplaceFilterFactory"
                 pattern="[^a-z0-9]+" replacement="_" replace="all"
            />
            <filter class="solr.PatternReplaceFilterFactory"
                 pattern="_$" replacement=""
            />
          </analyzer>
        </fieldType>
